@model IEnumerable<MyShop.Models.Item>

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" />
    <title>My Shop</title>
</head>

<body>
    <div class="container">
        <--- Viser verdien av Viewbag.CurrentViewName. 
        Dette er Razor syntax for å legge til server-side
        kode. Viewbag er et dynamisk objekt som brukes til
        å sende data fra kontroller til view -->
        <h1>@ViewBag.CurrentViewName</h1>
        
        <table class='table table-striped'>
            <tr><th>Id</th><th>Name</th><th>Price</th><th>Description</th></tr>
            
            <--- En Razor foreach-løkke som itererer gjennom alle elementene i Model. 
            Model er en samling av Item-objekter som ble sendt fra kontrolleren -->
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemId</td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("0.00 NOK")</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>